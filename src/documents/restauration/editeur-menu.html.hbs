                      <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><span class="hidden-xs">Ajouter </span>
                      <span class="glyphicon glyphicon-plus"></span>
                      </button>
                      <button class="btn btn-default" type="button">
                        <span class="hidden-xs">Supprimer </span>
                        <span class="glyphicon glyphicon-minus"></span>
                      </button>
                      </span>
                    </div>
                    <!-- saisie d'un plat -->
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="description du plat">
                      <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><span class="hidden-xs">Ajouter </span>
                      <span class="glyphicon glyphicon-plus"></span>
                      </button>
                      <button class="btn btn-default" type="button">
                        <span class="hidden-xs">Supprimer </span>
                        <span class="glyphicon glyphicon-minus"></span>
                      </button>
                      </span>
                    </div>
                  </div>
                </div>
                <!-- saisie des légumes du jour -->
                <div class="form-group">
                  <label class="col-sm-2 control-label">Légumes du jour</label>
                  <div class="col-sm-10">
                    <!-- saisie d'un légume -->
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="description du légume">
                      <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><span class="hidden-xs">Ajouter </span>
                      <span class="glyphicon glyphicon-plus"></span>
                      </button>
                      <button class="btn btn-default" type="button">
