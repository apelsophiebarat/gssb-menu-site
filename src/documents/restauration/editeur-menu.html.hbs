          <div class="panel panel-default">
            <!--debut du panel jour-->
            <div class="panel-heading">
              <h4 class="panel-title">
                <a  data-toggle="collapse" 
                    data-parent="#panelGroupJours" 
                    tabIndex="-1"
                    href="#panel{{this}}" 
                    class="collapsed">{{this}}</a>
              </h4>
            </div>
            <div id="panel{{this}}" class="panel-collapse collapse in">
              <div class="panel-body">
                <!--contenu jour-->
                <!-- saisie des plats du jour -->
                <div class="form-group">
                  <label class="col-sm-2 control-label">Plats du jour</label>
                  <div class="col-sm-10">
                    <!-- saisie d'un plat -->
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="description du plat">
